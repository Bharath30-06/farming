<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farming Management System</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: url('https://images.pexels.com/photos/2148852/pexels-photo-2148852.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2'); /* Light green to dark green */
            background-size: cover;
            color: #fff;
            text-align: center;
            margin: 20px;
        }

        h1 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        form {
            max-width: 400px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.5);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            font-size: 16px;
            margin-bottom: 8px;
            color: #000; /* Black label color */
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        button {
            background: #3498db;
            color: #ffffff7c;
            padding: 10px 15px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background: #2980b9;
        }
    </style>
</head>

<body>

    <h1>Farming Management System - Add Farm</h1>
    <form action="/addFarm" method="POST">
        

        <label for="farmName">Farm Name:</label>
        <input type="text" id="farmName" name="farmName" value="<%= farmName %>" required>

        <label for="location">Location:</label>
        <input type="text" id="location" name="location" value="<%= location %>" required>

        <label for="farmSize">Farm Size:</label>
        <input type="text" id="farmSize" name="farmSize" value="<%= farmSize %>" required>

        <label for="soilType">Soil Type:</label>
        <input type="text" id="soilType" name="soilType" value="<%= soilType %>" required>

        <label for="irrigationSystem">Irrigation System:</label>
        <input type="text" id="irrigationSystem" name="irrigationSystem" value="<%= irrigationSystem %>" required>

        <label for="cropRotationPlan">Crop Rotation Plan:</label>
        <input type="text" id="cropRotationPlan" name="cropRotationPlan" value="<%= cropRotationPlan %>" required>

        <label for="farmerName">Farmer Name:</label>
        <input type="text" id="farmerName" name="farmerName" value="<%= farmerName %>" required>

        <label for="phoneNumber">Phone Number:</label>
        <input type="text" id="phoneNumber" name="phoneNumber" value="<%= phoneNumber %>" required>
        <!-- Display validation errors -->
        <% if (errors && errors.length > 0) { %>
            <div style="color: red;">
                <% errors.forEach(error => { %>
                    <p><%= error %></p>
                <% }); %>
            </div>
        <% } %>

        <button type="submit">Submit</button>
    </form>
    <br>
    <a href="/farms">View Farms</a>
</body>

</html>
